
<popup>:
    id : pop
    title: 'Color Select'
    size_hint: None, None
    size: 400,400
    auto_dismiss: False
    Cpicker:
        on_color: root.hello(self.color)
        Button:
            text: 'Select'
            pos_hint: {'center_x': .76, 'y': .03}
            size_hint: None, None
            size: 100, 50
            on_press: root.dismiss()
<Mybutton@Button>:
    font_size: 25
    color: 0, 1, 0, 1
    size: 150, 50
    background_normal: ''
    background_down: 'pp.jpg'
    background_color: 0.5, .5, .5, 1
    size_hint: .200, .150

ScreenManagement:
    MainScreen:

    
<MainScreen>:
               
    Painter:
        id: painter

    Mybutton:
        pos: root.width*(0.8),0
        text: 'Color Select'
        on_press: root.open_it()

    Mybutton:
        text: "Clear"
        on_release:painter.canvas.clear()
        pos: root.width*(0.599),0

    Mybutton:
        pos: root.width*(0.398),0
        text: 'Eraser'
        on_press: root.eraser()
    Mybutton:
        pos: root.width*(0.197),0
        text: 'Pencil'
        on_press: root.pencil()    